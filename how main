[32m+[m[32m    function showSection(sectionId) {[m
[32m+[m[32m      // Hide all sections[m
[32m+[m[32m      document.querySelectorAll('.main .card').forEach(card => card.style.display = 'none');[m
[32m+[m[32m      // Remove active class from all links[m
[32m+[m[32m      document.querySelectorAll('.sidebar a').forEach(link => link.classList.remove('active'));[m
[32m+[m[32m      // Show selected section[m
[32m+[m[32m      document.getElementById(sectionId).style.display = 'block';[m
[32m+[m[32m      event.target.classList.add('active');[m
[32m+[m[32m    }[m
[32m+[m[32m  </script>[m
